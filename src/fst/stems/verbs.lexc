LEXICON Verbs
Active_Verbs;
Stative_Verbs;

LEXICON Active_Verbs
@U.VERB.ACT@ Object ;

LEXICON Stative_Verbs
# ;
! @U.VERB.STAT@ Stative_Subject ;
! I can't figure out the pattern to stative verbs. To be something
! doesn't take a be verb. It just takes an adjective with TAME markers
! but most adjectives require a be verb, like "be.good" so I have no idea.

LEXICON Object
@U.OBJ.1SG@:@U.OBJ.1SG@te Active_Subject ;
@U.OBJ.2SG@:@U.OBJ.2SG@e Active_Subject ;
Active_Subject;

LEXICON Active_Subject
@U.SUBJ.1SG@:@U.SUBJ.1SG@te V;
@U.SUBJ.12DL@@U.CLUS.INCL@:@U.SUBJ.12DL@@U.CLUS.INCL@tse V;
@U.SUBJ.12PL@@U.CLUS.INCL@:@U.SUBJ.12PL@@U.CLUS.INCL@tse V; ! add nuʔu suffix
@U.SUBJ.13DL@@U.CLUS.EXCL@:@U.SUBJ.13DL@@U.CLUS.EXCL@teke V;
@U.SUBJ.13PL@@U.CLUS.EXCL@:@U.SUBJ.13PL@@U.CLUS.EXCL@teke V; ! add nuʔu suffix
@U.SUBJ.123PL@@U.CLUS.INCL@:@U.SUBJ.123PL@@U.CLUS.INCL@ V; ! add nuʔu suffix
@U.SUBJ.2SG@:@U.SUBJ.2SG@ke V;
@U.SUBJ.2PL@:@U.SUBJ.2PL@ V; ! add nuʔu suffix
@U.SUBJ.3SG@:@U.SUBJ.3SG@ V;
@U.SUBJ.3PL@@U.COLL.NO@:@U.SUBJ.3PL@@U.COLL.NO@tse V;
@U.SUBJ.3PL@@U.COLL.YES@:@U.SUBJ.3PL@@U.COLL.YES@tse V; ! add pu after the stem

LEXICON Stative_Subject
!

